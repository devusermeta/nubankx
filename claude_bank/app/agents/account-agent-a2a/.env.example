# Azure AI Foundry V2 Configuration
# Get these values from Azure Portal > Your AI Project > Settings
AZURE_AI_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project
AZURE_AI_PROJECT_API_KEY=your_api_key_here

# Agent Configuration (NEW Foundry V2 format: name:version)
ACCOUNT_AGENT_NAME=account-a2a
ACCOUNT_AGENT_VERSION=1

# Model Deployment Name (from Azure AI Foundry)
ACCOUNT_AGENT_MODEL_DEPLOYMENT=gpt-4o

# MCP Server URLs (ensure these servers are running)
ACCOUNT_MCP_SERVER_URL=http://localhost:8070/mcp
LIMITS_MCP_SERVER_URL=http://localhost:8073/mcp

# A2A Server Configuration
A2A_SERVER_HOST=0.0.0.0
A2A_SERVER_PORT=9001

# Optional: Logging
LOG_LEVEL=INFO
