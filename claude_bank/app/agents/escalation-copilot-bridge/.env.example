# Environment Configuration Template
# Copy this file to .env and fill in your values

# ==========================================
# Power Automate Configuration (REQUIRED)
# ==========================================

# Power Automate Flow URL from your HTTP trigger
# Get this from Power Automate: Save your flow â†’ Copy HTTP POST URL from trigger
POWER_AUTOMATE_FLOW_URL=https://your-flow-url-here.com/invoke

# Timeout for Power Automate flow execution (in seconds)
POWER_AUTOMATE_TIMEOUT_SECONDS=60

# Bot/Agent Information
COPILOT_BOT_NAME=EscalationAgent

# ==========================================
# Azure Tenant Configuration (REQUIRED)
# ==========================================

# Your metakaal.com tenant ID
AZURE_TENANT_ID=your-metakaal-tenant-id-here

# Power Platform Environment ID (optional, for reference)
POWER_PLATFORM_ENVIRONMENT_ID=your-environment-id-here

# ==========================================
# Service Configuration
# ==========================================

# Port for A2A server (default: 9006)
A2A_SERVER_PORT=9006

# Agent Registry URL
AGENT_REGISTRY_URL=http://localhost:9000

# Register with agent registry on startup
REGISTER_WITH_REGISTRY=true

# ==========================================
# Logging
# ==========================================

LOG_LEVEL=INFO

# ==========================================
# Default Values (optional)
# ==========================================

DEFAULT_TICKET_PRIORITY=normal
DEFAULT_TICKET_STATUS=Open
DEFAULT_CUSTOMER_ID=CUST-UNKNOWN
