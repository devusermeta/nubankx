# ========================================
# AIMoneyCoach MCP Service Configuration
# UC3: AI Money Coach
# Port: 8077
# ========================================

# Environment
PROFILE=dev  # dev, staging, or prod

# Service Configuration
PORT=8077
HOST=0.0.0.0
LOG_LEVEL=INFO

# Azure AI Search (REQUIRED)
AZURE_AI_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_AI_SEARCH_KEY=your-search-admin-key
AZURE_AI_SEARCH_INDEX_UC3=bankx-money-coach

# Azure AI Foundry Content Understanding (REQUIRED)
AZURE_CONTENT_UNDERSTANDING_ENDPOINT=https://your-foundry-project.cognitiveservices.azure.com/

# Clarification Settings
CLARIFICATION_THRESHOLD=0.6
MAX_CLARIFYING_QUESTIONS=3

# Financial Health Assessment
CRITICAL_PATIENT_THRESHOLD=0.40  # 40% debt-to-income ratio

# Search Configuration
DEFAULT_TOP_K=5
MAX_TOP_K=10

# Managed Identity (leave empty to use system-assigned)
AZURE_CLIENT_ID=
