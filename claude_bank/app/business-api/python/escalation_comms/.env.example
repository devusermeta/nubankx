# ========================================
# EscalationComms MCP Service Configuration
# Shared by UC2 and UC3
# Port: 8078
# ========================================

# Environment
PROFILE=dev  # dev, staging, or prod

# Service Configuration
PORT=8078
HOST=0.0.0.0
LOG_LEVEL=INFO

# Azure Communication Services (REQUIRED)
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-acs-resource.communication.azure.com/;accesskey=your-access-key

# Email Configuration
SENDER_EMAIL=noreply@bankx.com
SUPPORT_TEAM_EMAIL=support@bankx.com

# Email Delivery Settings
EMAIL_RETRY_COUNT=3
EMAIL_TIMEOUT_SECONDS=30
EMAIL_RETRY_BACKOFF_SECONDS=2

# Template Configuration
EMAIL_TEMPLATE_LANGUAGE=en
INCLUDE_HTML_TEMPLATES=true

# Tracking Configuration
TICKET_TRACKING_URL_BASE=https://bankx.com/support/tickets
ADMIN_TICKET_URL_BASE=https://bankx.com/admin/tickets

# Managed Identity (leave empty to use system-assigned)
AZURE_CLIENT_ID=
