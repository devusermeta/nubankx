# Unified Payment MCP Server Configuration

# Server Configuration
PAYMENT_UNIFIED_MCP_PORT=8076
PAYMENT_UNIFIED_MCP_HOST=0.0.0.0

# Data Files (relative to project root)
DATA_DIR=dynamic_data

# Limits Configuration
# Note: Actual per-account limits are stored in dynamic_data/limits.json
# These are just defaults if limits file is not available
DEFAULT_PER_TXN_LIMIT=50000
DEFAULT_DAILY_LIMIT=200000
DEFAULT_CURRENCY=THB

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=[%(asctime)s] [%(levelname)s] [%(name)s] %(message)s

# Development Mode
DEBUG=False
